pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Run Application') {
            steps {
                deploy(
                    artifact: 'main/app.py',
                    environment: 'local',
                    servers: [
                        [
                            credentialsId: 'centos-python-runtime',
                            host: 'localhost'
                        ]
                    ]
                )
            }
        }
    }
}
